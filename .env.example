# ⚠️ IMPORTANT: This bot is designed for PRIVATE Discord servers (~30 people, trusted friends)
# Do NOT deploy to public or community servers

# Discord Bot Configuration
DISCORD_BOT_TOKEN=your_bot_token_here
DISCORD_SERVER_ID=your_server_id_here
DISCORD_CHANNEL_IDS=channel_id_1,channel_id_2,channel_id_3

# Admin User IDs (comma-separated)
ADMIN_USER_IDS=your_discord_user_id_here

# Model Configuration
MODEL_PATH=models/finetuned/qwen2.5-3b-personality-q4.gguf
MODEL_CHAT_TEMPLATE=chatml  # CRITICAL for Qwen2.5-3B-Instruct (do not change)
MODEL_CONTEXT_LENGTH=2048
MODEL_THREADS=0  # 0 = auto-detect optimal thread count
GPU_LAYERS=0  # Number of layers to offload to GPU (0=CPU only, 10-20 recommended if GPU available)

# Generation Parameters (v2.0 Defaults for Private Servers)
GENERATION_TEMPERATURE=0.7  # 0.5-1.0 range (0.7 = balanced)
GENERATION_TOP_P=0.9
GENERATION_TOP_K=40
GENERATION_MAX_TOKENS=120  # 50-300 range (120 = typical Discord message length)
GENERATION_REPETITION_PENALTY=1.1

# Bot Behavior
RESPONSE_RATE=0.05  # 5% probability to respond to non-mentions
ALWAYS_RESPOND_TO_MENTIONS=true  # Always respond when bot is @mentioned
RESPOND_ONLY_TO_MENTIONS=false  # If true, ONLY respond to @mentions (ignores RESPONSE_RATE)

# Vector Database
VECTOR_DB_PATH=data_storage/embeddings
EMBEDDING_MODEL=BAAI/bge-small-en-v1.5

# Database
DATABASE_PATH=data_storage/database/bot.db

# Logging
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR
LOG_FILE=data_storage/bot.log
LOG_MAX_SIZE_MB=50
LOG_BACKUP_COUNT=5

# GUI Settings (stored in database, these are defaults)
GUI_START_BOT_ON_LAUNCH=false
GUI_START_ON_WINDOWS_BOOT=false
GUI_MINIMIZE_TO_TRAY=true
GUI_SHOW_NOTIFICATIONS=true
